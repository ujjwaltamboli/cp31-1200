#include <bits/stdc++.h>
using namespace std;
int main(){
    long long t;
    cin>>t;
    while (t--){
        long long n;
        cin>>n;
        vector<long long> store(n,0);
        for (long long i=0;i<n;i++){
            cin>>store[i];
        }
        long long sum1=0;
        for (long long i=0;i<n;i++){
            sum1=sum1|store[i];
        }

        long long sum2=LLONG_MAX;
        for (long long i=0;i<n;i++){
            sum2=sum2&store[i];
        }

        long long xoring=sum1^sum2;
        long long xoring2=-1*xoring;
        long long ans=(xoring&xoring2)+(xoring&xoring2);
        cout<<ans<<endl;

        //T.C.:- O(n);
        //S.C.:- O(n);
    }
}
