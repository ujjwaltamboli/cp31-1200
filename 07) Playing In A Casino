#include <bits/stdc++.h>
using namespace std;
int main(){
    long long t;
    cin>>t;
    while (t--){
        long long n,m;
        cin>>n>>m;
        vector<vector<long long>> store(m, vector<long long>(n,0));

        for (long long j=0;j<n;j++){
            for (long long i=0;i<m;i++){
                cin>>store[i][j];
            }
        }

        
        for (auto &i:store){
            sort(i.begin(), i.end());
        }
        
        vector<vector<long long>> sum(m, vector<long long> (n,0));
        long long totalSum=0;
        for (long long i=0;i<m;i++){
            for (long long j=1;j<n;j++){
                sum[i][j]=j*abs(store[i][j]-store[i][j-1])+sum[i][j-1];
                totalSum=totalSum+sum[i][j];
            }
        }
        cout<<totalSum<<endl;

        //T.C.:- O(n*m*logn);
        //S.C.:- O(n*m);
    }

    return 0;
}
